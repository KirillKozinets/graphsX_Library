<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MathGraphExample">


    <com.sgc.graphslibrary.graph.MathGraph
        android:id="@+id/math"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:isAbscissaInCenter="true"
        app:isOrdinateInCenter="true"
        app:isScaling="true"
        app:isHorizontalScroll="true"
        app:isVerticalScroll="true"
        app:minScaling="0.2"
        app:maxScaling="5"
        app:stepDivisionsAbscissaAxis="100"
        app:stepDivisionsOrdinateAxis="100"
        app:scaleDivisionDescriptionAxisY="1"
        app:scaleDivisionDescriptionAxisX="1"
        app:isShowCoordinateGrid="true"/>

    <com.sgc.graphslibrary.legend.LegendView
        android:id="@+id/legend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>